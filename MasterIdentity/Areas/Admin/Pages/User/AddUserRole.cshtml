@page "{id}"
@model MasterIdentity.Areas.Admin.Pages.User.AddUserRoleModel
@{
}
<h4>Add User Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="addUserRole.Id" type="hidden" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="addUserRole.Role" class="control-label"></label>
                <select asp-for="addUserRole.Role" asp-items="Model.addUserRole.Roles" class="form-control"></select>
                <span asp-validation-for="addUserRole.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
