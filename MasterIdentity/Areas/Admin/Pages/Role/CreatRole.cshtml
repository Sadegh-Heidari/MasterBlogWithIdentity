@page
@model MasterIdentity.Areas.Admin.Pages.Role.CreatRoleModel
@{
}
<h1>Create</h1>

<h4>Add Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <text class="text text-danger">@TempData["Error"]</text>
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="role.Name" class="control-label"></label>
                <input asp-for="role.Name" class="form-control" />
                <span asp-validation-for="role.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
