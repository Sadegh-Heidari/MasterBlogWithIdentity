@page
@model MasterIdentity.Pages.Register.ResetPasswordModel
@{
}
<div class="container">
    <h1>ResetPassword</h1>

    <h4>ResetPasswordDTO</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <text class="text text-danger">@TempData["Error"]</text>
                </div>
            }
            @if (TempData["ResetPassword"] != null)
            {
                <div class="alert-success">
                    <text>@TempData["ResetPassword"]</text>
                </div>
            }
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="ResetPassword.Id" class="form-control" />

                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="ResetPassword.Token" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="ResetPassword.Password" class="control-label"></label>
                    <input asp-for="ResetPassword.Password" class="form-control" />
                    <span asp-validation-for="ResetPassword.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResetPassword.ConfirmPassword" class="control-label"></label>
                    <input asp-for="ResetPassword.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>