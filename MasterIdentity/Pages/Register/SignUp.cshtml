@page
@model MasterIdentity.Pages.Register.SignUpModel
@{
}
<div class="container">
        <h1>Register</h1>
        <h4>SignUp</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <text class="text text-danger">@TempData["Error"]</text>
                    </div>
                }
                <form method="Post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="SignUpViewModel.Email" class="control-label"></label>
                        <input asp-for="SignUpViewModel.Email" class="form-control" />
                        <span asp-validation-for="SignUpViewModel.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SignUpViewModel.Password" class="control-label"></label>
                        <input asp-for="SignUpViewModel.Password" class="form-control" />
                        <span asp-validation-for="SignUpViewModel.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SignUpViewModel.ConfirmPassword" class="control-label"></label>
                        <input asp-for="SignUpViewModel.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="SignUpViewModel.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
         
</div>